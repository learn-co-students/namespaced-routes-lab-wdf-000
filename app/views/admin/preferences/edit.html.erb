
<%= form_for [:admin, @preference]  do |f| %>
  <%= f.label :allow_create_songs %>
  <%= f.radio_button :allow_create_songs, true, :checked => @preference.allow_create_songs %> Yes
  <%= f.radio_button :allow_create_songs, false, :checked => !@preference.allow_create_songs %> No
  <br />
  <%= f.label :allow_create_artists %>
  <%= f.radio_button :allow_create_artists, true, :checked => @preference.allow_create_artists %> Yes
  <%= f.radio_button :allow_create_artists, false, :checked => !@preference.allow_create_artists %> No
  <br />
  <%= f.label :song_sort_order %>
  <%= f.radio_button :song_sort_order, "ASC", :checked => @preference.song_sort_order == "ASC" %> Ascending
  <%= f.radio_button :song_sort_order, "DESC", :checked => @preference.song_sort_order == "DESC" %> Descending
  <br />
  <%= f.label :artist_sort_order %>
  <%= f.radio_button :artist_sort_order, "ASC", :checked => @preference.artist_sort_order == "ASC" %> Ascending
  <%= f.radio_button :artist_sort_order, "DESC" , :checked => @preference.artist_sort_order == "DESC"  %> Descending
  <br />
  <%= f.submit %>
<% end %>
